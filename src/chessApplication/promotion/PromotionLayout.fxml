<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import java.net.*?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="chessApplication.promotion.PromotionController">
	<HBox fx:id="pieces" spacing="50" alignment="CENTER">
		<VBox.margin>
			<Insets top="30.0" right="25.0" bottom="0.0" left="25.0" />
		</VBox.margin>
		<Label text="" onMouseEntered="#selectPiece"></Label>
		<Label text="" onMouseEntered="#selectPiece"></Label>
		<Label text="" onMouseEntered="#selectPiece"></Label>
		<Label text="" onMouseEntered="#selectPiece"></Label>
	</HBox>
	<Region VBox.vgrow="ALWAYS"></Region>
	<HBox spacing="10" alignment="CENTER">
		<VBox.margin>
			<Insets top="10.0" right="25.0" bottom="10.0" left="25.0" />
		</VBox.margin>
		<Button text="Select" fx:id="selectButton"
			onAction="#selectButtonAction"></Button>
	</HBox>
	<stylesheets>
		<URL value="@PromotionLayout.css" />
	</stylesheets>
</VBox>

